{
  "name": "tourname",
  "description": "",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "check-node-version --package && lerna bootstrap",
    "lint": "npm run lint:all && npm run lint:single",
    "lint:all": "./scripts/lint.sh 'packages/**/src/**'",
    "lint:single": "lerna run lint",
    "start": "npm-run-all --parallel start:server start:client",
    "start:server": "lerna exec --scope http-server -- node src/server.js",
    "start:client": "lerna exec --scope web-app -- react-scripts start",
    "test":
      "check-node-version --package && echo \"Error: no test specified\" && exit 1",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "./scripts/lint-staged-files.sh"
  },
  "author": "Nicola Molinari <me@emmenko.org> (http://emmenko.org)",
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.6",
    "@commitlint/config-conventional": "^5.2.3",
    "@commitlint/config-lerna-scopes": "^5.2.6",
    "babel-eslint": "^7.2.3",
    "check-node-version": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.13.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.5.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lerna": "^2.5.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.2",
    "reason-scripts": "^0.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "\\.spec\\.js$"
  }
}
