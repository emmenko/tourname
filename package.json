{
  "name": "tourname",
  "description":
    "A OSS service for managing tournaments within an organization.",
  "version": "0.0.0",
  "private": true,
  "author": "Nicola Molinari <me@emmenko.org> (http://emmenko.org)",
  "license": "BSD-3-Clause",
  "scripts": {
    "postinstall": "check-node-version --package --print && lerna run prepare",
    "build": "lerna run --parallel --scope \"{http-server,web-app}\" build",
    "lint": "./scripts/lint.sh 'packages/**/src/**'",
    "start": "lerna run --parallel --scope \"{http-server,web-app}\" start",
    "test":
      "check-node-version --package && echo \"Error: no test specified\" && exit 1",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@commitlint/cli": "^6.0.0",
    "@commitlint/config-conventional": "^6.0.2",
    "babel-eslint": "^7.2.3",
    "check-node-version": "^3.1.1",
    "eslint": "^4.13.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.5.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lerna": "^2.5.1",
    "lint-staged": "^6.0.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.2",
    "react-scripts": "^1.0.17"
  },
  "lint-staged": {
    "*.js": ["./scripts/lint.sh"]
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "\\.spec\\.js$"
  }
}
